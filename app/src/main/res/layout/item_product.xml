<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="product"
            type="com.lordkajoc.myprojectshop.model.DataProductsResponseItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_marginRight="10dp"
                android:src="@{product.image}"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tvJudulProduct"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@{product.name}"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/imgProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTglProduct"
                android:text="@{product.createdAt}"
                android:textColor="@color/teal_700"
                android:layout_toRightOf="@+id/imgProduct"
                android:layout_below="@+id/tvJudulProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>